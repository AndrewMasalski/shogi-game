<Window x:Class="TestStand.ShogiBoard.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:Controls="clr-namespace:Yasc.Controls;assembly=Yasc.BoardControl"
        Title="MainWindow" Height="600" Width="800">
  <StackPanel>
    <Controls:ShogiBoard Board="{Binding}" Height="500" 
                         Name="Board"/>
    <CheckBox Content="IsEnabled" 
              IsChecked="{Binding ElementName=Board, Path=IsEnabled, Mode=TwoWay}"/>
  </StackPanel>
</Window>
