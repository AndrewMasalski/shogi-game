<Window x:Class="TestStand.BoardDiagram.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:rv="clr-namespace:Yasc.RulesVisualization;assembly=Yasc.RulesVisualization"
    Title="MainWindow" Height="600" Width="800">
  <rv:BoardDiagram Black="B3g, P1e, B9i" White="B3c, P5e" MovesToShow="1">
    <rv:AvailableUsualMoves From="9i" To="8h, 7g, 6f, 5e" Mode="AndNoMore"/>
    <rv:AvailableUsualMoves From="3c" To="2b, 1a, 2d, 1e, 4b, 5a, 4d" Mode="AndNoMore"/>
    <rv:AvailableUsualMoves From="3g" To="1i, 2h, 2f, 4h, 5i, 4f, 5e" Mode="AndNoMore"/>
  </rv:BoardDiagram>
</Window>
