<UserControl x:Class="Yasc.Gui.ShogiBoardCore"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:Yasc.GenericDragDrop"
    >
  <Grid>
    <ItemsControl x:Name="_cells" ItemsSource="{Binding}" local:Dnd.Drop="OnDragDrop">
      <ItemsControl.ItemsPanel>
        <ItemsPanelTemplate>
          <UniformGrid Rows="9" Columns="9"/>
        </ItemsPanelTemplate>
      </ItemsControl.ItemsPanel>
    </ItemsControl>
    <Canvas x:Name="_adornerLayer"/>
  </Grid>
</UserControl>
