      <Setter Property="Fill" Value="White"/>
      <Setter Property="SnapsToDevicePixels" Value="True"/>
      <Setter Property="Margin" Value="-1"/>
    </Style>
    <Style TargetType="{x:Type Line}">
      <Setter Property="Stretch" Value="Fill"/>
