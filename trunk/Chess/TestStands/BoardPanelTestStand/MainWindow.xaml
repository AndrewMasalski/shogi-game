      <Rectangle local:BoardPanel.Column="3" local:BoardPanel.Row="2" Style="{StaticResource DarkSquare}"/>
      <Rectangle local:BoardPanel.Column="3" local:BoardPanel.Row="4" Style="{StaticResource DarkSquare}"/>
      <Rectangle local:BoardPanel.Column="3" local:BoardPanel.Row="6" Style="{StaticResource DarkSquare}"/>
