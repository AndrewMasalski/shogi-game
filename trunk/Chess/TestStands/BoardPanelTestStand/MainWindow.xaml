      <local:FontPiece Symbol="n" local:BoardPanel.Column="7" local:BoardPanel.Row="1" ChessFont="{Binding ElementName=_fonts, Path=SelectedItem}"/>
      <local:FontPiece Symbol="r" local:BoardPanel.Column="8" local:BoardPanel.Row="1" ChessFont="{Binding ElementName=_fonts, Path=SelectedItem}"/>

    </local:BoardPanel>
    <Viewbox>
      <StackPanel Width="100" Height="300">
        <TextBox Text="{Binding ElementName=_fonts, Path=SelectedItem.PieceMap, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
        <ListBox x:Name="_fonts" IsSynchronizedWithCurrentItem="True" SelectedIndex="0">
          <local:ChessFont FontFamily="Fonts/#Chess Alpha" PieceMap="pbhrqkonjtwl"/>
          <local:ChessFont FontFamily="Fonts/#Chess Cases" PieceMap="pbnrqkomvtwl"/>
          <local:ChessFont FontFamily="Fonts/#Chess" PieceMap="pbhrqkonjtwl"/>
