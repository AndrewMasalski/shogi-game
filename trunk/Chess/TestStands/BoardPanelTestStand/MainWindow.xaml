      <!--      <Line Y2="1" local:BoardPanel.Column="2"/>-->
      <!--      <Line Y2="1" local:BoardPanel.Column="3"/>-->
      <!--      <Line Y2="1" local:BoardPanel.Column="4"/>-->
      <!--      <Line Y2="1" local:BoardPanel.Column="5"/>-->
      <!--      <Line Y2="1" local:BoardPanel.Column="6"/>-->
      <!--      <Line Y2="1" local:BoardPanel.Column="7"/>-->
      <!--      <Line Y2="1" local:BoardPanel.Column="8"/>-->

      <TextBlock local:BoardPanel.Column="0" local:BoardPanel.Row="1" Text="8" Style="{StaticResource EdgeStyle}"/>
