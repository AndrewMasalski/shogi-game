      <TextBlock local:BoardPanel.Column="1" local:BoardPanel.Row="9" Text="a" Style="{StaticResource EdgeStyle}"/>
      <TextBlock local:BoardPanel.Column="2" local:BoardPanel.Row="9" Text="b" Style="{StaticResource EdgeStyle}"/>
      <TextBlock local:BoardPanel.Column="3" local:BoardPanel.Row="9" Text="c" Style="{StaticResource EdgeStyle}"/>
      <TextBlock local:BoardPanel.Column="4" local:BoardPanel.Row="9" Text="d" Style="{StaticResource EdgeStyle}"/>
